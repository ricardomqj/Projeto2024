extends layout

block content
  head
    title Painel de Controlo do Administrador
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
    style.
      .action-buttons button {
        margin-right: 5px;
      }

  body
    .container.mt-4
      h1 Painel de Controlo do Administrador

      table.table
        thead
          tr
            th Nome
            th Email
            th Cargo
            th Ação
        tbody
          each user in users
          tr(data-href=`/users/${user._id}`)
            td user.nome
            td user.email
            td user.role
            td.action-buttons
              button.btn.btn-success(type='button') Editar
              button.btn.btn-danger(type='button') Remover

      button.btn.btn-primary.mt-3(type='button') Adicionar
