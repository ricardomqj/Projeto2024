extends layout

block content
  .container.mt-5
    h1 Publicar
    form(action='/files', method='post', enctype='multipart/form-data')
      .mb-3
        label(for='titulo') Título
        input#titulo.form-control(type='text', name='titulo', required)
      .mb-3
        label(for='tema') Tema
        input#tema.form-control(type='text', name='tema', required)
      .mb-3
        label(for='descricao') Descrição
        textarea#descricao.form-control(name='descricao', rows='4')
      .mb-3
        label(for='file') Upload files
        input#file.form-control(type='file', name='myFile', required)
      .mb-3
        label(for='privacidade') Privacidade
        select#privacidade.form-control(name='privacidade')
          option(value='Publico') Público
          option(value='Privado') Privado
      .mb-3.form-check
        input#enviarAgora.form-check-input(type='checkbox', name='enviarAgora', checked)
        label.form-check-label(for='enviarAgora') Enviar agora
      .mb-3.form-check
        input#agendarEnvio.form-check-input(type='checkbox', name='agendarEnvio')
        label.form-check-label(for='agendarEnvio') Agendar envio
      button.btn.btn-primary(type='submit') Submeter

  .w3-card-4 
    header.w3-indigo 
      h2 File List
    .w3-container
      table.w3-table-all 
        tr
          th Date 
          th File
          th Size
          th Type

        each f in files 
          tr(onclick='showImage(\"' + f.name + '\", \"' + f.mimetype + '\")')
            td= f.date
            td= f.name 
            td= f.size 
            td= f.mimetype
          
