extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card
          .card-body
            h2.text-center UniMaterial
            form(action='/login', method='POST')
              .form-group.mb-3
                label(for='username') Nome
                input#username.form-control(type='text', name='username', required='true', placeholder='Digite seu nome')
              .form-group.mb-3
                label(for='password') Password
                input#password.form-control(type='password', name='password', required='true', placeholder='Digite sua senha')
              button.btn.btn-primary.btn-block(type='submit') Entrar
